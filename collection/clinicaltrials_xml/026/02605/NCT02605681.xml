  <brief_title>Midkine and ACE-Ang II Induced Endothelial Injury in Sepsis</brief_title>
  <official_title>Relationship of Midkine and ACE-Ang II Induced Endothelial Injury in Sepsis</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Southeast University, China</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
