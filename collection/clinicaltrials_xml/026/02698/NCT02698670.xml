  <brief_title>Prospective Registry on User Experience With The Mapping System For Ablation Procedures</brief_title>
  <acronym>TRUE-HD</acronym>
  <official_title>Prospective Registry on User Experience With The Mapping System For Ablation Procedures</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Boston Scientific Corporation</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
  </sponsors>
