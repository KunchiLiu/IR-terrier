  <brief_title>Signature Personalised Patient Care System With the Vanguard Knee System Study</brief_title>
  <official_title>Study on the Signature Personalised Patient Care System With the Vanguard Knee System</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Zimmer Biomet</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
