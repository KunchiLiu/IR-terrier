  <primary_outcome>
    <measure>The change in trough forced expiratory volume in 1 second (FEV1) and the rate of change in the 20th percentile of lung density voxels using High Resolution Computed Tomography (HRCT)</measure>
    <time_frame>2 years</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Percent change in trough FEV1</measure>
    <time_frame>2 years</time_frame>
  </secondary_outcome>
  <number_of_arms>2</number_of_arms>
