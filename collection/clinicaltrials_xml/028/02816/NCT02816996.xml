  <brief_title>Patient Comfort During Dermatologic Procedures</brief_title>
  <official_title>Managing Patient Comfort During Dermatologic Procedures: A Randomized Controlled Trial</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Northwestern University</agency>
      <agency_class>Other</agency_class>
