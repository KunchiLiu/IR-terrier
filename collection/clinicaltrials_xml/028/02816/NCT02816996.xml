  <oversight_info>
    <has_dmc>Yes</has_dmc>
  </oversight_info>
  <brief_summary>
    <textblock>
      The goal of this study is to find the effect of holding a patient's hand on anxiety and pain
      during dermatologic procedures.
    </textblock>
  </brief_summary>
  <overall_status>Not yet recruiting</overall_status>
  <start_date>March 2017</start_date>
  <completion_date type="Anticipated">June 2018</completion_date>
  <primary_completion_date type="Anticipated">June 2018</primary_completion_date>
  <phase>N/A</phase>
  <study_type>Interventional</study_type>
  <has_expanded_access>No</has_expanded_access>
  <study_design_info>
    <allocation>Randomized</allocation>
    <intervention_model>Parallel Assignment</intervention_model>
    <primary_purpose>Supportive Care</primary_purpose>
    <masking>Open Label</masking>
  </study_design_info>
  <primary_outcome>
    <measure>Anxiety</measure>
    <time_frame>immediately after dermatologic procedure</time_frame>
    <description>Subjects will complete the 6-item State-Trait Anxiety Inventory (STAI)</description>
  </primary_outcome>
  <primary_outcome>
    <measure>Pain</measure>
    <time_frame>immediately after dermatologic procedure</time_frame>
    <description>Subjects will complete a visual analog scale for pain ranging from &quot;no pain at all&quot; to &quot;worst possible pain.&quot;</description>
  </primary_outcome>
  <number_of_arms>3</number_of_arms>
  <enrollment type="Anticipated">135</enrollment>
  <condition>Pain</condition>
  <condition>Anxiety</condition>
  <arm_group>
    <arm_group_label>Hand-holding</arm_group_label>
    <arm_group_type>Experimental</arm_group_type>
    <description>Subjects will be randomized to be in the handholding, stress ball, or control study arms. The randomization will be 1:1:1.</description>
  </arm_group>
