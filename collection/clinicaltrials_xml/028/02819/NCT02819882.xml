  <brief_summary>
    <textblock>
      This study is a prospective, multicenter non-interventional cohort study designed to develop
      a registry in unresectable locally advanced or metastatic disease.
    </textblock>
  </brief_summary>
  <overall_status>Not yet recruiting</overall_status>
  <start_date>June 2016</start_date>
  <completion_date type="Anticipated">June 2024</completion_date>
  <primary_completion_date type="Anticipated">June 2024</primary_completion_date>
  <phase>N/A</phase>
  <study_type>Observational [Patient Registry]</study_type>
  <has_expanded_access>No</has_expanded_access>
  <study_design_info>
    <observational_model>Cohort</observational_model>
    <time_perspective>Prospective</time_perspective>
  </study_design_info>
  <target_duration>5 Years</target_duration>
  <primary_outcome>
    <measure>Number of patients with the different breast cancer subtypes and real distribution of them.</measure>
    <time_frame>8 years</time_frame>
    <description>Number of patients with the different breast cancer subtypes (Luminal A-like, Luminal B-like [HER2 negative], Luminal B-like [HER2 positive], HER2-enriched and Triple Negative) of the unresectable locally advanced or metastatic disease</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Breast cancer and heredofamiliar risk according with the patient and tumor characteristics.</measure>
    <time_frame>8 years</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Differences in the development disease in the group of male vs female patients.</measure>
    <time_frame>8 years</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Evolution of number of patients by molecular subtypes of breast cancer.</measure>
    <time_frame>8 years</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Influence of primary tumor surgery in patient outcomes</measure>
    <time_frame>8 years</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Influence of timing of primary tumor surgery in patients with metastatic disease as first diagnosis</measure>
    <time_frame>8 years</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Influence of local therapy (surgery, radiotherapy and radiofrequency) in the outcome of patients with oligometasta</measure>
    <time_frame>8 years</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Prevalence (at entry) and incidence (during the observation period) of pregnancies, abortions and pregnancy outcomes.</measure>
    <time_frame>8 years</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Number of participants with specific biomarkers on tumor and blood samples.</measure>
    <time_frame>8 years</time_frame>
    <description>to improve the understanding of metastatic breast cancer by performing analysis on tumor and blood samples.</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>IHC/ISH discrepancies between the primary tumor and the metastasis in patients with biopsy of the metastatic lesions.</measure>
    <time_frame>8 years</time_frame>
  </secondary_outcome>
  <number_of_groups>5</number_of_groups>
  <enrollment type="Anticipated">1400</enrollment>
  <condition>Breast Neoplasms</condition>
  <arm_group>
    <arm_group_label>Luminal A-like subtype</arm_group_label>
    <description>Patients that express ER, express PgR+ (≥ 20%), don't express HER2 and have Ki-67 'low' (&lt; 14%).</description>
  </arm_group>
  <arm_group>
    <arm_group_label>Luminal B-like (HER2 negative) subtype:</arm_group_label>
    <description>Patients that express ER and are either PgR- or low (&lt; 20%) and/or Ki67 'high' (≥ 14%).</description>
  </arm_group>
  <arm_group>
    <arm_group_label>Luminal B-like (HER2 positive) subtype:</arm_group_label>
    <description>Patients that express ER and HER2 irrespective of PgR or Ki67 status.</description>
  </arm_group>
  <arm_group>
    <arm_group_label>HER2-enriched subtype</arm_group_label>
    <description>Patients that express HER2 and don't express ER or PgR.</description>
  </arm_group>
  <arm_group>
    <arm_group_label>TN subtype</arm_group_label>
    <description>Patients who are negative for the expression of ER, PgR and HER2.</description>
  </arm_group>
  <intervention>
    <intervention_type>Other</intervention_type>
    <intervention_name>No intervention</intervention_name>
    <arm_group_label>Luminal A-like subtype</arm_group_label>
    <arm_group_label>Luminal B-like (HER2 negative) subtype:</arm_group_label>
    <arm_group_label>Luminal B-like (HER2 positive) subtype:</arm_group_label>
    <arm_group_label>HER2-enriched subtype</arm_group_label>
    <arm_group_label>TN subtype</arm_group_label>
  </intervention>
  <biospec_retention>Samples With DNA</biospec_retention>
