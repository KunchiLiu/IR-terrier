    <intervention_type>Drug</intervention_type>
    <intervention_name>RBV</intervention_name>
    <description>Capsules administered orally in a divided daily dose according to package insert weight-based dosing recommendations (≤ 60 kg = 600 mg, &gt; 60 kg to ≤ 80 kg = 800 mg, and ≥ 80 kg = 1000 mg)</description>
    <arm_group_label>SOF/VEL FDC plus RBV 12 weeks</arm_group_label>
    <arm_group_label>SOF/VEL FDC plus RBV 24 weeks</arm_group_label>
    <other_name>REBETOL®</other_name>
  </intervention>
  <eligibility>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  Genotype 1 or 2 HCV infection

          -  Chronic HCV infection (≥ 6 months prior to screening) documented by prior medical
             history or liver biopsy

          -  Previously treated with a DAA-containing regimen of at least 4 week duration
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>20 Years</minimum_age>
    <maximum_age>N/A</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
