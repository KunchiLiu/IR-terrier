    <time_frame>Baseline, post-procedure, and 30 days</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Echocardiographic assessment</measure>
    <time_frame>Baseline, post-procedure, and 30 days</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Distance walked 6 minute walk test (6MWT)</measure>
    <time_frame>Baseline &amp; 30 days</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Health-related quality of life (QoL)</measure>
    <time_frame>Baseline &amp; 30 days</time_frame>
  </secondary_outcome>
