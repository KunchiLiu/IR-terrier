  <primary_outcome>
    <measure>Observational change in daily reported activity levels (counts/min) as assessed by actigraphy, from baseline to 30 days post MitraClip implantation</measure>
    <time_frame>30 days</time_frame>
    <description>Phillips Actiwatch Spectrum PRO is the device being used to capture the primary outcome measure</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Levels of daily and weekly activity as assessed by actigraphy</measure>
    <time_frame>Pre-procedure, post-procedure, 30 days and 2, 3, 4, 5 and 6 months</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Patterns of daily Sleep/Wake by actigraphy</measure>
    <time_frame>Pre-procedure, post-procedure, 30 days and 2, 3, 4, 5 and 6 months</time_frame>
  </secondary_outcome>
  <secondary_outcome>
