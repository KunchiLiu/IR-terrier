  </study_design_info>
  <primary_outcome>
    <measure>Symptoms of transient neurological symptoms</measure>
    <time_frame>5 days</time_frame>
  </primary_outcome>
  <number_of_groups>1</number_of_groups>
  <enrollment type="Anticipated">200</enrollment>
  <condition>Transient Neurologic Symptoms</condition>
  <eligibility>
    <study_pop>
      <textblock>
        Patients who are submitted for surgery at a local hospital and where spinal anesthesia is
        indicated.
      </textblock>
    </study_pop>
    <sampling_method>Probability Sample</sampling_method>
    <criteria>
      <textblock>
        Inclusion Criteria:

          -  adults over the age of eighteen years

        Exclusion Criteria:

          -  patient refuse spinal anesthesia

          -  spinal anesthesia is contraindicated

          -  pregnancy

          -  patient is incapable of giving consent

          -  diabetes

          -  neurological disorders

          -  chronic pain

          -  chronic use of analgesics

          -  spinal anesthesia within five days before the actual surgery
      </textblock>
    </criteria>
    <gender>All</gender>
    <minimum_age>19 Years</minimum_age>
    <maximum_age>N/A</maximum_age>
    <healthy_volunteers>No</healthy_volunteers>
  </eligibility>
