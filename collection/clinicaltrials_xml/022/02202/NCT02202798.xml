  <brief_title>New Devices to Measure the Intracuff Pressure</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Joseph D. Tobias</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
