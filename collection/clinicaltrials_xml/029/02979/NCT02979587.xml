  <primary_outcome>
    <measure>Freedom from procedure- or device-related mortality at 30 days.</measure>
    <time_frame>30 days</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>Percentage of subjects with acceptable hemodynamic function composite at 6 months.</measure>
    <time_frame>6 months</time_frame>
    <description>Defined as:
Mean RVOT gradient as measured by continuous‐wave Doppler ≤40 mmHg ‐AND‐
Pulmonary regurgitant fraction as measured by magnetic resonance imaging &lt;20%</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Technical success at exit from catheterization lab/operating room (OR)</measure>
    <time_frame>At exit from catheterization lab/operating room (OR)</time_frame>
  </secondary_outcome>
