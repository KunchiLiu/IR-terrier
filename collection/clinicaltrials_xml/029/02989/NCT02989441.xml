  <brief_title>Perfusion Index in Anesthesia</brief_title>
  <official_title>Peripheral Perfusion Index as Marker for Systemic Hemodynamics During Anesthesia</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Jakob Højlund</agency>
      <agency_class>Other</agency_class>
