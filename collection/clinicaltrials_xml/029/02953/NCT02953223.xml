  <brief_title>A Study to Monitor the Use of an Amino Acid-Based Infant Formula</brief_title>
  <acronym>EAGLE</acronym>
  <official_title>A Study to Monitor the Use of an Amino Acid-Based Infant Formula</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Nestlé</agency>
      <agency_class>Industry</agency_class>
