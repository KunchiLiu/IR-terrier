  <brief_title>Assessment of Blood Glucose Monitoring Devices With New Insight Features</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>LifeScan</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
