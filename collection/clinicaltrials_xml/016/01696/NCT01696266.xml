  <primary_outcome>
    <measure>Incidence of any hypoglycaemic event</measure>
    <time_frame>In the 4 weeks prior to and following the baseline visit (Week 0)</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Difference in the reported incidence rates of any hypoglycaemia</measure>
    <time_frame>In the 4 weeks prior to (Part 1) versus following (Part 2) the baseline visit</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Incidence of hypoglycaemic events requiring hospital admission</measure>
    <time_frame>In the 6 months prior to and 4 weeks following the baseline visit</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Incidence of all severe hypoglycaemic events</measure>
    <time_frame>In the 6 months prior to and 4 weeks following the baseline visit</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Incidence of probable symptomatic hypoglycaemic events</measure>
    <time_frame>In the 4 weeks prior to and following the baseline visit</time_frame>
  </secondary_outcome>
