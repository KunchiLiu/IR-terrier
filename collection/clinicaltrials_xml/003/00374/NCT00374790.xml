  <brief_title>Iron Supplementation of Lead-Exposed Infants</brief_title>
  <official_title>Pilot Study to Determine the Efficacy of Iron Supplementation in Preventing the Elevation of Blood Lead Concentrations in Young Children</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Cornell University</agency>
      <agency_class>Other</agency_class>
