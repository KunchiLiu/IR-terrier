  </arm_group>
  <intervention>
    <intervention_type>Drug</intervention_type>
    <intervention_name>Aripiprazole</intervention_name>
    <description>Tablets, Oral, 5 - 30 mg, Once daily, 8 weeks.</description>
    <arm_group_label>A1</arm_group_label>
    <other_name>Abilify</other_name>
  </intervention>
