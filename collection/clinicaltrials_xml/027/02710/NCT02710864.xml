  <brief_title>A Cross-sectional Study of Congenital Cytomegalovirus Infection in Newborns in China</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Jun Zhang</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
