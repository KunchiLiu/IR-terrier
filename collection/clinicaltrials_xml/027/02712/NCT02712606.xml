  <brief_summary>
    <textblock>
      A study about accuracy of pulse oximeter with hypoxemic measurements (Blue sensor, Masimo,
      Irvine, CA, USA) in children with cyanotic congenital heart disease
    </textblock>
  </brief_summary>
  <overall_status>Recruiting</overall_status>
  <start_date>March 2016</start_date>
  <primary_completion_date type="Anticipated">March 2017</primary_completion_date>
