  <brief_title>Randomized Study on Salt Intake and Energy Metabolism</brief_title>
  <acronym>TS4</acronym>
  <official_title>Effects of Increased Salt Intake on Energy Metabolism in Healthy Volunteers - a Randomized Clinical Study</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Charite University, Berlin, Germany</agency>
      <agency_class>Other</agency_class>
