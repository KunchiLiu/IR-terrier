  <primary_outcome>
    <measure>Dietary induced thermogenis (%)</measure>
    <time_frame>14 days</time_frame>
    <description>Decrease of dietary induced thermogenis after salt vs. placebo</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Systolic blood pressure (mmHg)</measure>
    <time_frame>14 days</time_frame>
    <description>Increase of systolic blood pressure after salt vs. placebo</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Lymphocytic pro-inflammatory mediators</measure>
    <time_frame>14 days</time_frame>
    <description>Increase of lymphocytic pro-inflammatory mediators after salt vs. placebo</description>
  </secondary_outcome>
  <number_of_arms>2</number_of_arms>
