    <observational_model>Cohort</observational_model>
    <time_perspective>Prospective</time_perspective>
  </study_design_info>
  <primary_outcome>
    <measure>Successful reduction of total GERD-HRQL score</measure>
    <time_frame>6 months, 12 months, and annually to 60 months</time_frame>
  </primary_outcome>
  <primary_outcome>
    <measure>Serious, device-related adverse events</measure>
    <time_frame>60 months</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Incidence rate of device-related adverse events, reduction in use of daily acid suppression therapy, frequency and severity of heartburn and regurgitation, extra-esophageal symptoms and side effect profile</measure>
    <time_frame>6 months, 12 months, and annually to 60 months</time_frame>
  </secondary_outcome>
  <number_of_groups>1</number_of_groups>
  <enrollment type="Anticipated">200</enrollment>
