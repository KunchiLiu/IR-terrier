  <brief_title>A Post-Approval Study of the LINX® Reflux Management System</brief_title>
  <official_title>A Post-Approval Study of the LINX® Reflux Management System</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Torax Medical Incorporated</agency>
      <agency_class>Industry</agency_class>
    </lead_sponsor>
  </sponsors>
