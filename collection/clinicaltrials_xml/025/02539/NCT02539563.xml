  <brief_title>Do Peanut Shaped Birthing Balls Reduce the Length of Labor in Patients With Epidural Analgesia?</brief_title>
  <official_title>Do Peanut Shaped Birthing Balls Reduce the Length of Labor in Patients With Epidural Analgesia?</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Wake Forest University Health Sciences</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
