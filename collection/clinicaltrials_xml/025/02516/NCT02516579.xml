  <brief_title>European Sickle Cell Disease Cohort - Hydroxyurea</brief_title>
  <acronym>ESCORT-HU</acronym>
  <official_title>ESCORT-HU : European Sickle Cell Disease Cohort - Hydroxyurea</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>ADDMEDICA SASA</agency>
