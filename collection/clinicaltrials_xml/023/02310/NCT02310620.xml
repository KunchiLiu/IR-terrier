  <brief_title>Computer Games to Prevent Mild Cognitive Impairment and Dementia</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Semmelweis University</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
