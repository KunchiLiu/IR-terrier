  <primary_outcome>
    <measure>Assess the safety of study drug in terms of adverse events, clinical laboratory tests and electrocardiograms.</measure>
    <time_frame>24 months</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Assess the efficacy of study drug in terms of change in 6-minute walk test.</measure>
    <time_frame>24 months</time_frame>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Assess the efficacy of study drug in terms of left ventricular function.</measure>
    <time_frame>24 months</time_frame>
  </secondary_outcome>
