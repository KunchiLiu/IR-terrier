  <study_design_info>
    <intervention_model>Single Group Assignment</intervention_model>
    <primary_purpose>Treatment</primary_purpose>
    <masking>Open Label</masking>
  </study_design_info>
  <primary_outcome>
    <measure>Number of participants with adverse events</measure>
    <time_frame>24 weeks</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>Change in the number of Heavy Drinking Days (HDDs) from baseline</measure>
    <time_frame>Baseline(-2 weeks), 0, 1, 2, 4, 8, 12, 16, 20, 24, and 28 weeks</time_frame>
    <description>The number of HDDs is defined as the number of days per month [days/month] with alcohol consumption of &gt; 60 g for males and &gt; 40 g for females.</description>
  </secondary_outcome>
  <number_of_arms>1</number_of_arms>
  <enrollment type="Anticipated">400</enrollment>
  <condition>Alcohol Dependence</condition>
  <arm_group>
    <arm_group_label>Nalmefene hydrochloride 20 mg</arm_group_label>
