  <brief_title>Liraglutide and Cardio-Metabolic Risk Markers</brief_title>
  <official_title>Effects of Liraglutide on Cardio-Metabolic Risk Markers</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>University of Palermo</agency>
      <agency_class>Other</agency_class>
