  <primary_outcome>
    <measure>Changes in the European Evaluation of Vertigo (EEV) scale in 4 weeks.</measure>
    <time_frame>4 weeks</time_frame>
  </primary_outcome>
  <secondary_outcome>
    <measure>The duration of the vertigo symptom.</measure>
  </secondary_outcome>
