  <brief_title>Autoimmunity in Retinitis Pigmentosa</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Semmelweis University</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
  </sponsors>
