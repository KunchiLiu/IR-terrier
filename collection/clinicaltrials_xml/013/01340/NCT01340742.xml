  <brief_title>Remote Ischemic Preconditioning Before Abdominal Surgery</brief_title>
  <official_title>Remote Ischemic Preconditioning Before Abdominal Surgery and the Prevalence of Perioperative Complications</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Lawson Health Research Institute</agency>
      <agency_class>Other</agency_class>
