  <brief_title>Substrate Ablation Guided by High Density Mapping in Atrial Fibrillation</brief_title>
  <acronym>SUBSTRATE DH</acronym>
  <official_title>Substrate Ablation Guided by Automatic High Density Mapping for the Treatment of Atrial Fibrillation</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Hospital St. Joseph, Marseille, France</agency>
      <agency_class>Other</agency_class>
    </lead_sponsor>
