  <brief_title>Functional and Quality of Life Improvement Following Transcatheter Heart Valve Implantation</brief_title>
  <sponsors>
    <lead_sponsor>
      <agency>Sheba Medical Center</agency>
      <agency_class>Other</agency_class>
