  <primary_outcome>
    <measure>Change from baseline in diastolic blood pressure after week 8</measure>
  </primary_outcome>
  <secondary_outcome>
    <measure>Change from baseline in systolic blood pressure after week 8</measure>
  </secondary_outcome>
