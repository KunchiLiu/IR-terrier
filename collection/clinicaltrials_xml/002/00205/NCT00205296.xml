  <brief_title>Fitness Training in Children</brief_title>
  <official_title>Effect of Fitness Training on Insulin Sensitivity and Body Composition in Children</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>University of Wisconsin, Madison</agency>
      <agency_class>Other</agency_class>
